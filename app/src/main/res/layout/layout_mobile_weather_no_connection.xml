<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/failureNoConnectionIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/failure_no_connection"
        app:layout_constraintBottom_toTopOf="@+id/failureNoConnectionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_signal_cellular_off" />

    <TextView
        android:id="@+id/failureNoConnectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/failure_no_connection"
        android:textColor="@color/purple_700"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/failureNoConnectionIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>